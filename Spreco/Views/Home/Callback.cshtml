@foreach (var item in ViewBag.mapping)
{
    <div class= "parallax" id=@item.Key.getImages()[0]></div>
    <div class="similar-information">
        <ul>
            @foreach (var subItem in item.Value)
            {
                <li>@subItem.getTrackName() by @subItem.getArtistName()</li>
            }
        </ul>
    </div>
}


